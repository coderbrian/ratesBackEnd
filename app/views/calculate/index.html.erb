			 <div class="col-lg-6">
					<div class="card ">
					<div class="card-header text-center">Currency value Calculator</div>
					<div class="card-body">
								
					<form name="addem" action="" >
					<div class="form-group">
						<div class="inputWrapper">
							<label for="exampleFormControlInput1">Currency</label>
							<select class="form-control" id="mySelect" onchange="copy()">
								<option value='<%=Rate.first.price%>'> <%=Market.first.base_currency.currency_name + "/" + Market.first.quoted_currency.currency_name %><%var = Rate.first.price%></option>
								
								<option value="<%=Rate.second.price%>"><%=Market.second.base_currency.currency_name + "/" + Market.second.quoted_currency.currency_name %></option>
								
								<option value="<%=Rate.third.price%>"><%=Market.third.base_currency.currency_name + "/" + Market.third.quoted_currency.currency_name %></option>
								
								<option value="<%=Rate.fourth.price%>"><%=Market.fourth.base_currency.currency_name + "/" + Market.fourth.quoted_currency.currency_name %></option>
								
								<option value="" selected>--Please Select Market--</option>
							</select>
							
							<label for="currencyFrom">Amount</label>
							<input type="text"  id="tb1" name="tb1" class="form-control is-valid" onkeyup="calc(this)"/>
							
						</div><!-- .inputWrapper -->
						<div class="inputWrapper">
							<label for="currencyTo">Rate</label>
							<input type="text" id="tb2" name="tb2" class="form-control" onkeyup="calc(this)"/>
							
							<label for="currencyTo">PAY: </label>
							<input type="text" id="total" name="total"  class="form-control" disabled />
						
						</div><!-- .inputWrapper -->
						
						<hr>
						<ul>
							<li>Select the currency you want to calculate</li>
							<li>Enter the amount you have and Click calculate to see the value </li>
						</ul>
					</div><!-- .conversionWrapper -->
				</form>
				
				<script>
		function copy() {
				document.getElementById("tb2").value  = (document.getElementById("mySelect").value)/100+1;
			};
		
			var x = 0;
			var y = 0;
			var z = 0;
			function calc(obj) {
				var e = obj.id.toString();
				if (e == 'tb1') {
					x = Number(obj.value);
					y = Number(document.getElementById('tb2').value);
				} else {
					x = Number(document.getElementById('tb1').value);
					y = Number(obj.value);
				}
				z = x * y;
				document.getElementById('total').value = z;
				document.getElementById('update').innerHTML = z;
			};
		</script>
		
